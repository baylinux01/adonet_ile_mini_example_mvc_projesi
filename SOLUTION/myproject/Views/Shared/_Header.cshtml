 <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
            @if(Model!=null && Model.AppUser!=null)
            {
                <form>
                <input style="margin-right:20px" class="btn btn-warning" type="submit" value="Hoşgeldiniz @Model.AppUser.Username">
                </form>
                <form action="/Home/LogOut" method="get">
                <input style="margin-right:30px" class="btn btn-danger" type="submit" value="Çıkış yap">
                </form>
            }
            else
            {
                <form action="/Home/LogInPage" method="get">
                <input style="margin-right:20px" class="btn btn-success" type="submit" value="Giriş Yap">
                </form>
                <form action="/Home/SignUpPage" method="get">
                <input style="margin-right:30px" class="btn btn-success" type="submit" value="Kayıt Ol">
                </form>
                @* <a class="btn btn-success" href="/Home/KayitOlSayfasi">Kayıt Ol</a> *@
                @* @Html.ActionLink("tıkla","KayitOlSayfasi","Home"); *@
